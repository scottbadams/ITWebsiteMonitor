@page "/setup/roles/new"
@model WebsiteMonitor.App.Pages.Setup.Roles.NewModel

@{
  ViewData["Title"] = "Setup - New Role";
}

<h2>New Role</h2>

<form method="post">
  @Html.AntiForgeryToken()
  <div asp-validation-summary="All" style="margin: 6px 0; color: #b00;"></div>

  <table>
    <tr>
      <td><label asp-for="Name">Name</label></td>
      <td><input asp-for="Name" /></td>
    </tr>
  </table>

  <div style="margin-top:10px;">
    <button class="wm-btn" type="submit">Create</button>
    <a class="wm-btn" href="/setup/roles" style="margin-left:6px;">Back</a>
  </div>
</form>
